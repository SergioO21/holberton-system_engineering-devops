#!/usr/bin/env bash
# MySQL 5.7 and Checker access.

# Give the checker access to your server
ssh_conn="\n\
#Checker access\n\
ssh-rsa "
echo -e "$ssh_conn" >> ~/.ssh/authorized_keys

# Install MySQL 5.7
echo 'deb http://repo.mysql.com/apt/ubuntu/ trusty mysql-5.7-dmr' | sudo tee -a /etc/apt/sources.list
sudo apt-get update
sudo apt-get -y install mysql-server-5.7

# Check your changes
cat ~/.ssh/authorized_keys
echo "\n ^ The checker access must be the last key.\n\n"
mysql --version
